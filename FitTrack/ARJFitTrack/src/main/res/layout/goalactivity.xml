<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <Button
            android:id="@+id/deletegoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/Deletegoals"
            app:layout_constraintBaseline_toBaselineOf="@+id/setgoal"
            app:layout_constraintLeft_toLeftOf="@+id/editText"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="58dp"
            android:layout_marginTop="54dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="64dp" />

        <Button
            android:id="@+id/setgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Setgoals"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/deletegoal" />

        <TextView
            android:id="@+id/goallist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="@string/listgoal"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/listv"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <ListView
            android:id="@+id/listv"
            android:layout_width="0dp"
            android:layout_height="384dp"
            android:layout_marginTop="42dp"
            android:background="@android:color/background_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deletegoal"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintHorizontal_bias="0.0">

        </ListView>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>

