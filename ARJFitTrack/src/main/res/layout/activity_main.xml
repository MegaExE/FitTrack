    <TextView
        android:id="@+id/stepcounter"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="@string/StepsCounter"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- android:background="@drawable/tab" -->
    <TextView
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/pink"
        android:background="@drawable/tab"
        android:textSize="60sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/stepcounter"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:src="@drawable/walkingicon"
        android:id="@+id/imageView7"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/distance"
        app:layout_constraintRight_toRightOf="@+id/stepcounter"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/stepcounter"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:fontFamily="casual"
        android:text="@string/Distance"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/calsburnt"
        android:layout_marginTop="117dp"
        app:layout_constraintTop_toBottomOf="@+id/stepcounter"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="117dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/travelled"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:src="@drawable/distanceicon"
        android:id="@+id/imageView6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/calsburnt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/travelled" />

    <TextView
        android:id="@+id/calsburnt"
        android:layout_width="187dp"
        android:layout_height="29dp"
        android:fontFamily="casual"
        android:text="@string/Calories"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/cals"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/travelled"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/cals"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/calories"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:text="@string/cal"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginEnd="40dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/cals"
        android:layout_marginBottom="78dp" />

    <ImageView
        android:layout_width="74dp"
        android:layout_height="62dp"
        android:src="@drawable/caloriesburnticon"
        android:id="@+id/imageView8"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="61dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calsburnt" />

    <TextView
        android:id="@+id/meter"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginEnd="22dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/travelled"
        app:layout_constraintBaseline_toBaselineOf="@+id/travelled"
        tools:layout_constraintBaseline_creator="1" />


</android.support.constraint.ConstraintLayout>