<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="79dp"
        android:id="@+id/add"
        android:background="@drawable/addicon"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/height"
        android:inputType="numberDecimal"
        android:hint="@string/currentHeight"
        android:textColorHint="@android:color/white"
        app:layout_constraintRight_toLeftOf="@+id/add"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/listWeight" />

    -->
    <ImageButton
        android:id="@+id/addHeight"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:background="@drawable/redaddicon"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/add"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/add"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:id="@+id/yourHeight"
        android:text="@string/latestHeight"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/listWeight"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="@+id/addHeight"
        android:layout_marginTop="196dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="196dp"
        app:layout_constraintLeft_toLeftOf="@+id/listWeight"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:id="@+id/displayHeight"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintRight_toRightOf="@+id/listWeight"
        app:layout_constraintBaseline_toBaselineOf="@+id/yourHeight"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/addHeight" />

    <ListView
        android:id="@+id/listWeight"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:layout_marginBottom="85dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

    </ListView>
</android.support.constraint.ConstraintLayout>