    <TextView
        android:id="@+id/stepcounter"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="@string/StepsCounter"
        android:textColor="@color/green"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count" />

    <!-- android:background="@drawable/tab" -->
    <TextView
        android:id="@+id/count"
        android:layout_width="762dp"
        android:layout_height="131dp"
        android:fontFamily="casual"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/pink"
        android:background="@drawable/tab"
        android:textSize="60sp"
        app:layout_constraintRight_toLeftOf="@+id/imageView7"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintLeft_toRightOf="@+id/stepcounter"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="97dp"
        android:layout_height="118dp"
        android:src="@mipmap/walkingicon"
        android:id="@+id/imageView7"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.491" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:fontFamily="casual"
        android:text="@string/Distance"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/imageView6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/travelled"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.77" />

    <TextView
        android:id="@+id/travelled"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/meter"
        app:layout_constraintBaseline_toBaselineOf="@+id/meter"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/stepcounter" />

    <ImageView
        android:layout_width="98dp"
        android:layout_height="92dp"
        android:src="@mipmap/distanceicon"
        android:id="@+id/imageView6"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/travelled"
        android:layout_marginStart="33dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/count"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/calsburnt"
        android:layout_width="187dp"
        android:layout_height="29dp"
        android:fontFamily="casual"
        android:text="@string/Calories"
        android:textColor="@color/green"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/cals"
        android:layout_marginStart="21dp"
        android:layout_marginTop="15dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintLeft_toRightOf="@+id/travelled"
        android:layout_marginLeft="21dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/cals"
        android:layout_width="237dp"
        android:layout_height="73dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/calories"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/cal"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="@+id/cals"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="67dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8" />

    <ImageView
        android:layout_width="81dp"
        android:layout_height="101dp"
        android:src="@mipmap/caloriesburnticon"
        android:id="@+id/imageView8"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/cals"
        app:layout_constraintRight_toRightOf="@+id/cals"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/count"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toRightOf="@+id/calsburnt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/meter"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/cals"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/cals"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toTopOf="@+id/calories" />


</android.support.constraint.ConstraintLayout>


