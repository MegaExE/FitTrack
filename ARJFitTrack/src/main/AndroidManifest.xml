<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arj.fittrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".WeightLog"
            android:label="@string/Weight"
            android:parentActivityName=".Main">
        </activity>

        <activity
            android:name=".Notepad"
            android:label="@string/NotePad"
            android:parentActivityName=".Main">

        </activity>

        <activity
        android:name=".Goal"
        android:label="@string/Goals"
        android:parentActivityName=".Main"
        android:windowSoftInputMode="adjustPan">
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
        </activity>

        <activity android:name=".Challenges"
            android:label="@string/Challenge"
            android:parentActivityName=".Goal">

        </activity>

        <uses-feature
            android:name="@string/step_counter"
            android:required="false"/>
        <uses-feature
            android:name="@string/step_detector"
            android:required="false"/>

    </application>



</manifest>