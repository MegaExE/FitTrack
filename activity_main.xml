<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="arj.fittrack.Main"
    tools:layout_editor_absoluteY="81dp">

    <!--
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/greenbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"> -->

    <TextView
        android:id="@+id/stepcounter"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="@string/StepsCounter"
        android:textColor="@color/green"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/count"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="1.0" />

    <!-- android:background="@drawable/tab" -->
    <TextView
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:fontFamily="casual"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/pink"
        android:textSize="60sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/calsburnt"
        app:layout_constraintRight_toRightOf="@+id/goals"
        android:layout_marginTop="42dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="1dp" />

    <TextView
        android:id="@+id/travelled"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/meter"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/count" />

    <TextView
        android:id="@+id/goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/Goals"
        android:textColor="@color/green"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/setgoals"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/notepad"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="72dp" />

    <TextView
        android:id="@+id/meter"
        android:layout_width="107dp"
        android:layout_height="22dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:fontFamily="casual"
        android:text="@string/Distance"
        android:textColor="@color/green"
        android:textSize="24sp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/travelled"
        android:layout_marginEnd="66dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="66dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cals"
        android:layout_width="106dp"
        android:layout_height="72dp"
        android:fontFamily="casual"
        android:text="0"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:background="@drawable/tab"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/calories"
        tools:layout_constraintBaseline_creator="1" />


    <ImageButton
        android:id="@+id/notepad"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/notepad_icon"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/goals"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/cals" />

    <ImageButton
        android:id="@+id/weight"
        android:layout_width="148dp"
        android:layout_height="96dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/dumbbellicon"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/setgoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="monospace"
        android:text="@string/Setgoals"
        android:textColor="@color/green"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="61dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/goals"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/calsburnt"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:fontFamily="casual"
        android:text="@string/Calories"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/setgoals"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="139dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="49dp"
        android:layout_height="26dp"
        android:text="@string/cal"
        android:textColor="@color/green"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/weight"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="159dp"
        app:layout_constraintRight_toRightOf="@+id/travelled"
        android:layout_marginTop="166dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="165dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count" />

</android.support.constraint.ConstraintLayout>

